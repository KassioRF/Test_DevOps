pipeline {
  agent {
    docker {
      image 'jenkins-cpp-buildenv'
      label 'integration-agent'
      args '-u 1000:1000'
    }
  }

  stages {
    stage('Code checks') {
      when {
        changeRequest(target: 'main')
      }
      steps {
        dir('calculator') {
          sh 'make lint'
          sh 'make format-check'
        }
      }
    }

    stage('Tests') {
      when {
        changeRequest(target: 'main')
      }
      steps {
        dir('calculator') {
          sh 'make unittest'
        }
      }
    }
  }
}