pipeline {
  agent {
    label 'integration-agent'
  }

  stages {
    stage('Code checks') {
      when {
        changeRequest(target: 'main')
      }
      steps {
        dir('calculator') {
          sh 'make lint'
          sh 'make format-check'
        }
      }
    }

    stage('Tests') {
      when {
        changeRequest(target: 'main')
      }
      steps {
        dir('calculator') {
          sh 'make unittest'
        }
      }
    }
  }
}